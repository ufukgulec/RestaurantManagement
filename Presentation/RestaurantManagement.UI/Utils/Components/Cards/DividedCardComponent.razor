@using RestaurantManagement.UI.Utils.Components.Cards.Models
@inherits BaseCardComponent
<div class="card widget-inline">
    <div class="card-body p-0">
        <div class="row g-0">
            @if (cards != null)
            {
                @foreach (var item in cards)
                {
                    <div class="col-sm-6 col-lg-@(12/cards.Count)">
                        <div class="card shadow-none m-0 rounded-0 border-start border-end">
                            <div class="card-body text-center">
                                <i class="@item.Icon " style="font-size: 24px;"></i>
                                <h3><span>@item.Number</span></h3>
                                <p class="text-muted font-15 mb-0">@item.CardName</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div> <!-- end row -->
    </div>
</div>
@code {
    [Parameter]
    public List<DividedCardModel> cards { get; set; }
}
