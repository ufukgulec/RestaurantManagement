@model WidgetModel
<div class="card card-custom gutter-b">
    <div class="card-body">
        <div class="d-flex justify-content-between flex-column h-100">
            <div class="h-100">
                <div class="d-flex flex-column flex-center">
                    <div class="symbol symbol-65 symbol-info">
                        <span class="symbol-label font-size-h5">
                            <i class="text-white @Model.widgetIcon icon-xl"></i>
                        </span>
                    </div>
                    <p href="#" class="card-title font-weight-bolder text-dark-75 text-hover-primary font-size-h4 m-0 pt-7 pb-1">@Model.widgetName</p>
                    <div class="font-weight-bold text-dark-50 font-size-sm pb-7">@Model.widgetText</div>
                </div>
                <div class="pt-1">
                    @foreach (var item in Model.widgetEntities)
                    {
                        <div class="d-flex align-items-center pb-9">

                            <div class="symbol symbol-40 symbol-light mr-5">
                                @if (string.IsNullOrEmpty(item.iconClass))
                                {
                                    <span class="symbol-label font-size-h5">@item.Text[0]</span>
                                }
                                else
                                {
                                    <span class="symbol-label">
                                        <span class="svg-icon svg-icon-2x svg-icon-dark-50 d-flex">
                                            <i class="@item.iconClass"></i>
                                        </span>
                                    </span>
                                }
                            </div>

                            <div class="d-flex flex-column flex-grow-1">
                                <a href="@item.Id" class="text-dark-75 text-hover-primary mb-1 font-size-lg font-weight-bolder" data-toggle="tooltip" title="" data-placement="top" data-original-title="@item.Tooltip">
                                    @item.Text
                                </a>
                                <span class="text-muted font-weight-bold">@item.SubText</span>
                            </div>
                            <span class="font-weight-bolder label label-xl @item.textClass label-inline px-3 py-5 min-w-45px">
                                @item.Count
                            </span>
                        </div>
                    }

                    @*<div class="d-flex align-items-center pb-9">
                    <div class="symbol symbol-45 symbol-light mr-4">
                    <span class="symbol-label">
                    <span class="svg-icon svg-icon-2x svg-icon-dark-50 d-flex">
                    <i class="text-danger fas fa-tag"></i>
                    </span>
                    </span>
                    </div>
                    <div class="d-flex flex-column flex-grow-1">
                    <a href="#" class="text-dark-75 text-hover-primary mb-1 font-size-lg font-weight-bolder" data-toggle="tooltip" title="" data-placement="top" data-original-title="Pasif olan tüm kategorilerin sayısını belirtir">Pasif Kategori Sayısı</a>
                    <span class="text-muted font-weight-bold">Sadece Pasif Olanlar</span>
                    </div>
                    <span class="font-weight-bolder label label-xl label-light-danger label-inline px-3 py-5 min-w-45px">
                    @Model.getPassiveCategoryCount
                    </span>
                    </div>*@
                </div>
            </div>
            <div class="d-flex flex-center" id="kt_sticky_toolbar_chat_toggler_2" data-toggle="tooltip" title="" data-placement="right" data-original-title="Gelişmiş Tablo Görünümü">
                <a href="@Model.widgetLink" class="btn btn-primary font-weight-bolder font-size-sm py-3 px-14">Tabloya Git</a>
            </div>
        </div>
    </div>
</div>