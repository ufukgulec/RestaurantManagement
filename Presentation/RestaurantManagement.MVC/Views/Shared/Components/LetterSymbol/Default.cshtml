@model WidgetModel
<div class="card card-custom gutter-b">
    <div class="card-header border-0 pt-5">
        <h3 class="card-title align-items-start flex-column">
            <span class="card-label font-weight-bolder text-dark">@Model.widgetName</span>
            <span class="text-muted mt-3 font-weight-bold font-size-sm">@Model.widgetText</span>
        </h3>
        <div class="card-toolbar">
            <div class="dropdown dropdown-inline" data-toggle="tooltip" title="Quick actions" data-placement="left">
                <a href="#" class="btn btn-clean btn-hover-light-primary btn-sm btn-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="ki ki-bold-more-hor"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-md dropdown-menu-right">

                    <ul class="navi navi-hover py-5">
                        @foreach (ListEntity item in Model.widgetActions)
                        {
                            <li class="navi-item">
                                <a href="@item.SubText" class="navi-link">
                                    <span class="navi-icon">
                                        <i class="flaticon2-drop"></i>
                                    </span>
                                    <span class="navi-text">@item.Text</span>
                                </a>
                            </li>
                        }

                        <li class="navi-separator my-3"></li>
                        <li class="navi-item">
                            <a href="#" class="navi-link">
                                <span class="navi-icon">
                                    <i class="flaticon2-magnifier-tool"></i>
                                </span>
                                <span class="navi-text">Help</span>
                            </a>
                        </li>
                        <li class="navi-item">
                            <a href="#" class="navi-link">
                                <span class="navi-icon">
                                    <i class="flaticon2-bell-2"></i>
                                </span>
                                <span class="navi-text">Privacy</span>
                                <span class="navi-link-badge">
                                    <span class="label label-light-danger label-rounded font-weight-bold">5</span>
                                </span>
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
    </div>

    <div class="card-body pt-8">
        @foreach (ListEntity item in Model.widgetEntities)
        {
            <div class="d-flex align-items-center mb-10">
                @if (string.IsNullOrEmpty(item.iconClass))
                {
                    <div class="symbol symbol-40 @item.bgClass mr-5">
                        <span class="symbol-label font-size-h5">@item.Text[0]</span>
                    </div>
                }
                else
                {
                    <div class="symbol symbol-45 symbol-light mr-4">
                        <span class="symbol-label">
                            <span class="svg-icon svg-icon-2x svg-icon-dark-50 d-flex">
                                <i class="@item.iconClass"></i>
                            </span>
                        </span>
                    </div>
                }
                <div class="d-flex flex-column font-weight-bold">
                    <a href="#" class="text-dark text-hover-primary mb-1 font-size-lg">@item.Text</a>
                    <span class="text-muted">@item.SubText</span>
                </div>

            </div>
        }
    </div>

</div>